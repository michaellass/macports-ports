# -*- coding: utf-8; mode: tcl; tab-width: 4; indent-tabs-mode: nil; c-basic-offset: 4 -*- vim:fenc=utf-8:ft=tcl:et:sw=4:ts=4:sts=4

PortSystem          1.0

name                gnucobol
version             3.1.2
revision            1

categories          lang
maintainers         nomaintainer
# Executables are GPL, libraries LGPL
license             {GPL-3+ LGPL-3+}
description         an open-source COBOL compiler
long_description    GnuCOBOL is a free COBOL compiler, formerly known \
                    as OpenCOBOL. It implements a substantial part of \
                    the COBOL 85, COBOL 2002 and COBOL 2014 standards, \
                    as well as many extensions included in other COBOL compilers.

homepage            https://gnucobol.sourceforge.io/
platforms           darwin

set branch          [join [lrange [split ${version} .] 0 1] "."]
master_sites        sourceforge:project/gnucobol/gnucobol/${branch}
use_xz              yes
checksums           md5     720d8425e4ac30b83b84f43ef08f9558 \
                    sha1    681230a882089da4285d5711397c47a77d5b488d \
                    rmd160  1dd3f11b5fd3d5e336e000ccba11544dbcf73251 \
                    sha256  597005d71fd7d65b90cbe42bbfecd5a9ec0445388639404662e70d53ddf22574 \
                    size    2198512

depends_lib         port:gettext \
                    port:gmp \
                    port:ncurses

configure.args-append     --without-db \
                          --without-json \
                          --without-xml2

variant isam description {Enable ISAM handler for indexed I/O} {
    depends_lib-append        port:db53
    configure.args-replace    --without-db --with-db
    configure.cppflags-append -I${prefix}/include/db53
    configure.ldflags-append  -L${prefix}/lib/db53
}
variant json description {Enable support for JSON GENERATE} {
    depends_lib-append        port:json-c
    configure.args-replace    --without-json --with-json
}
variant xml description {Enable support for XML GENERATE} {
    depends_lib-append        port:libxml2
    configure.args-replace    --without-xml2 --with-xml2
}

default_variants    +isam +json

test.run            yes
test.env            TERM=xterm-256color
test.target         check
